<div class="container">
    <div class="row">
    <div class="col-md-8">
    <div class="row">
   
     <% @tasks.each do |task| %>
        <div class="col-md-6">
            <div class="card mt-3">
                <div class="card-body">
                    <h3><%= link_to task.task_name, task_path(task.id) %></h3>
                    <%= link_to "View", task_path(task.id), class: 'btn btn-primary'%>
                </div>
            </div>
        </div>
          <% end %>
      </div>
    </div>

    <div class="col-md-4">

    <div class="card mt-3">
        <div class="card-header">
            Categories
        </div>

        <div class="card-body">

        <ul class="list-group">

         <% categories_task.each do |category| %>

        
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <%= link_to category.name, tasks_path(:category_1 => category.id) %>
    <span class="badge badge-primary badge-pill"><%= category.tasks.count %></span>
  </li>
       <% end %>
        </ul>
        </div>
    </div>
    </div>   
 </div>
    </div>
</div>
