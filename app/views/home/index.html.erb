<% if user_signed_in? %>
<div class="container-fluid" style="margin-top: 70px;">
<h1 class="text-center"><%= "Things I Got To Do Today! #{Date.today.to_s(:long)}" %></h1>



<div class="container" style="margin-top: 100px;">
  <div class="row">
  	<div class="col-md-12">
      <div class="container" style="margin-bottom: 20px; margin-top: 10px;"><%= link_to "Create Category", new_category_path, class:"btn btn-info btn-lg float-end" %>
      <%= link_to 'Create Task', new_category_task_path(:category_id), class:"btn btn-secondary btn-lg float-end" %>
      <h1>Task yolo!</h1>
      </div>
				<div class="table">
					<table class="table table-striped" style="border: 1px solid #d3d3d3;">
            <thead>
              <tr>
                <th>Name</th>
                <th>Details</th>
                <th>Deadline</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @categories.each do |category| %>
              <% category.tasks.all.sort_by { |c| c["created_at"] }.each do |task| %>
              
              <tr>
                <td style="width:10%"><%= task.name %></td>
                <td style="width:10%"><%= task.details %></td>
                <td style="width:10%"><%= task.deadline.to_s %></td>
                <td style="width:10%"><%= link_to "Edit" %>
              | <%= link_to "Delete",  method: :delete, data: { confirm: "Are you sure?" } %> 
                </td>
              </tr>
              <% end %>
             <% end %> 
            </tbody>
          </table>
        </div>
      </div>
		</div>
      
    
  <% end %>
	</div>

<% if !user_signed_in? %>
<div class="container-fluid" style="margin-top: 60px;">
<%= render 'partials/carousel' %>
</div>
<% end %>
