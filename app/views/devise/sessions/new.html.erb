<div class="container bg-light" style="margin-top: 250px; width: 35vw">
  <div class="row">
		<div class="span4 offset4 well">
      <h1 class="text-center">Log in</h1>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="input-group mb-3">
    <%= f.label :email, class:"input-group-text" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

    <div class="input-group mb-3">
    <%= f.label :password, class:"input-group-text" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check">
      <%= f.check_box :remember_me, class:"form-check-input", type:"checkbox" %>
      <%= f.label :remember_me , class:"form-check-label" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log In", class:"btn btn-danger btn-lg btn-block" %>  
  </div>
<% end %>
<br/>
Dont have an account with us? Or you may have forgotten your password. 
<%= render "devise/shared/links" %>
</div>
</div>
</div>
